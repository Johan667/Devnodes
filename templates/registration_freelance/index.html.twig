{% extends 'base.html.twig' %}

{% block title %}Devnodes | Inscription{% endblock %}

{% block body %}
    <h1 class="text-center">Inscription du freelance</h1>
    <p class="text-center">Ici vous entrez vos informations de base</p>

    <div id="myForm" style="width:1000px">
        <div id="step1" class="active">
            {{ form_start(form) }}
            <h2 class="text-center"> Etape 1/3</h2>
            <br>
            <br>
            <div class="form-group">
                {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre adresse email ici'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password.first, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control input-full'}}) }}
                {{ form_errors(form.password.first) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password.second, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control input-full'}}) }}
                {{ form_errors(form.password.second) }}
            </div>
            <br>
            <br>
                <button id="nextStep1" onclick="nextStep(2)">Suivant</button>
        </div>

        <div id="step2">
            <h2 class="text-center"> Etape 2/3</h2>
            <br>
            <br>
            <div class="form-group">
                {{ form_label(form.firstname, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom ici'}}) }}
                {{ form_errors(form.firstname) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lastname, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre pr√©nom ici'}}) }}
                {{ form_errors(form.lastname) }}
            </div>

            <div class="form-group">
                {{ form_label(form.address, null, {'label_attr': {'class': 'control-label'}}) }} - Optionnel
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.address) }}
            </div>

            <div class="form-group">
                {{ form_label(form.city, null, {'label_attr': {'class': 'control-label'}}) }} - Optionnel
                {{ form_widget(form.city, {'attr': {'class': 'form-control', 'id': 'city'}}) }}
                {{ form_errors(form.city) }}
            </div>

            <div class="form-group">
                {{ form_label(form.codePostal, null, {'label_attr': {'class': 'control-label'}}) }} - Optionnel
                {{ form_widget(form.codePostal, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.codePostal) }}
            </div>

            <div class="form-group">
                {{ form_label(form.country, null, {'label_attr': {'class': 'control-label'}}) }} - Optionnel
                {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.country) }}
            </div>
            <br>
            <br>
            <button id="previousStep2" onclick="nextStep(1)">Previous</button>
            <button id="nextStep2" onclick="nextStep(3)">Next</button>
        </div>

        <div id="step3">
            <h2 class="text-center"> Etape 3/3</h2>
            <br>
            <br>
            <div class="form-group">
                {{ form_label(form.title, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="form-group">
                {{ form_label(form.price, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.price) }}
            </div>

            <div class="form-group">
                {{ form_label(form.xpYears, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.xpYears, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.xpYears) }}
            </div>

            <div class="form-group">
                {{ form_label(form.biographie, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.biographie, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.biographie) }}
            </div>
            <br>
            <br>
            <button id="previousStep3" onclick="nextStep(2)">Previous</button>&nbsp;&nbsp;
            <button type="submit"> Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
