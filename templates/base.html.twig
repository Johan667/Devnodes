<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta description="Site de mise en relation entre un freelance dans les metiers du numérique et un client a travers un mission">
        <title>{% block title %}Devnodes{% endblock %}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;800&family=Raleway:wght@400;800&display=swap" rel="stylesheet">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/register.css') }}">
        <link href="{{ asset('css/profil.css') }}" type="text/css" rel="stylesheet" />
        <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}">

        {% block stylesheets %}{% endblock %}
    </head>
    <header>
        <nav>
            <a href="{{ path('app_home') }}"><img src="img/logo.png" alt="logo devnodes"></a>

            <!-- NAVBAR -->
            <div id="navbar" class="navbar">
                <ul>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a class="btn3" href="{{ path('admin') }}">Dashboard</a></li>
                    {% endif %}

                    {% if app.user %}
                        {% if is_granted('ROLE_USER') %}
                            <li><a class="btn1"  href="#">Favoris</a></li>
                            <li><a class="btn1"  href="#">Messagerie</a></li>
                            <li><a class="btn1"  href="#">Profil</a></li>
                            <li><a class="btn1"  href="#">Compte</a></li>
                        {% endif %}

                        <li><a class="btn2"  href="{{ path('app_logout') }}">Deconnexion</a></li>

                    {% else %}
                        <li><a class="btn1" href="{{ path('app_home') }}">Accueil</a></li>
                        <li><a class="btn1" href="{{ path('app_home') }}">Trouver une mission</a></li>
                        <li><a class="btn1" href="{{ path('app_home') }}">Trouver un freelance</a></li>
                        <li><a class="btn1" href="{{ path('app_login') }}">Se connecter</a></li>
                        <li><a class="btn1" href="{{ path('app_register') }}">Inscription</a></li>
                        <button class="btn4" type="submit">Créer une offre</button>
                    {% endif %}
                </ul>
            </div>
            <!-- FIN NAVBAR -->

            <!-- MENU BURGER -->
            <div id="mySidenav" class="sidenav">
                <a id="closeBtn" href="#" class="close">×</a>
                <ul>
                    <li><a href="#">Favoris</a></li>
                    <li><a href="#">Messagerie</a></li>
                    <li><a href="#">Profil</a></li>
                    <li><a href="#">Compte</a></li>
                </ul>
            </div>

            <a href="#" id="openBtn">
  <span class="burger-icon">
    <span></span>
    <span></span>
    <span></span>
  </span>
            </a>

            <!-- FIN MENU BURGER -->
        </nav>
    </header>
    <body>
   {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/home.js') }}"></script>
            <script src="https://kit.fontawesome.com/81ab4e445e.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
    <footer>
    
    </footer>
</html>
