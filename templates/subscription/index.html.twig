{% extends 'base.html.twig' %}

{% block title %}Devnodes | Abonnez vous{% endblock %}

{% block body %}

    <header>
        <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
            <h1 class="display-4 fw-normal">Abonnement <strong>VIP</strong></h1>
            <p class="fs-5 text-muted"><strong>Boostez</strong> votre visibilité en souscrivant à un abonnement Devnodes <strong>VIP</strong> !</p>
        </div>
    </header>

    <main>
        <div class="row row-cols-1 row-cols-md-2 mb-3 text-center ">
            <div class="col-6">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Gratuit</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">0 €<small class="text-muted fw-light">/mois</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Affichage standard de votre profil</li>
                            <li>Recevez les missions de vos clients</li>
                        </ul>
                        {% if is_granted('ROLE_VIP') %}

                            {% else %}
                                <em>Votre plan actuel</em><br>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">VIP</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">9,99 €<small class="text-muted fw-light">/mois</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Visibilité de votre profil augmenté</li>
                            <li>Réponse du support en 48h</li>
                            <li>Recevez les missions de vos clients</li>
                        </ul>
                        {% if is_granted('ROLE_VIP') %}
                        <a class="subscript" href="#"><button type="button" class="w-30 btn btn-sm btn-danger">Résilier</button></a>
                        {% else %}
                        <a class="subscript" href="{{ path('subscription_create') }}"><button type="button" class="btnSearch">Souscrire</button></a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>


{% endblock %}
