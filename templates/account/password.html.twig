{% extends 'base.html.twig' %}

{% block title %}Devnodes | Modifier mon mot de passe{% endblock %}


{% block body %}
    <!-- En tête titre -->
    <h1 class="text-center mt-3">Mon mot de passe</h1>
    <p class="text-center"> Ici vous pouvez modifier votre mot de passe ou <a href="{{ path('app_account') }}"> Retourner à votre compte</a></p>
    <br>


    <!-- Wrapper -->
    <div id="myForm">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Modifier</button>
        {{ form_end(form) }}
    </div>

{% endblock %}